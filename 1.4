#include <iostream>
#include <fstream>
#include <string>
using namespace std;

int main() {
    ifstream fin("input.txt");
    string line;
    bool blockComment = false;

    cout << "Program without comments:\n";

    while (getline(fin, line)) {
        for (int i = 0; i < line.length(); i++) {

            if (!blockComment && i+1 < line.length() &&
                line[i] == '/' && line[i+1] == '/') {
                break; // ignore rest of line
            }

            if (!blockComment && i+1 < line.length() &&
                line[i] == '/' && line[i+1] == '*') {
                blockComment = true;
                i++;
                continue;
            }

            if (blockComment && i+1 < line.length() &&
                line[i] == '*' && line[i+1] == '/') {
                blockComment = false;
                i++;
                continue;
            }

            if (!blockComment)
                cout << line[i];
        }
        if (!blockComment) cout << endl;
    }

    fin.close();
    return 0;
}

