#include <iostream>
#include <string>
#include <cctype>
using namespace std;

int main() {
    string s;
    cout << "Enter a comment line: ";
    getline(cin, s);

    bool isCom = false;
    int letters = 0;

    if (s.size() >= 2 && s[0] == '/' && s[1] == '/') {
        isCom = true;
        for (int i = 2; i < (int)s.size(); i++)
            if (isalpha((unsigned char)s[i])) letters++;
    }
    else if (s.size() >= 4 && s[0] == '/' && s[1] == '*' &&
             s[s.size()-2] == '*' && s[s.size()-1] == '/') {
        isCom = true;
        for (int i = 2; i < (int)s.size()-2; i++)
            if (isalpha((unsigned char)s[i])) letters++;
    }

    if (isCom) {
        cout << "It is a comment\n";
        cout << "Letters in comment: " << letters << "\n";
    } else {
        cout << "It is NOT a comment\n";
    }

    return 0;
}
